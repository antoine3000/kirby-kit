		"prettier": "^2.8.4",
		"sass": "^1.59.2",
		"unocss": "^0.50.4",
		"vite-plugin-kirby": "^0.1.3"
	},
	"dependencies": {
		"@very-simple/components": "^0.4.0",
		"@very-simple/deploy": "^0.0.4",
		"loadeer": "^2.1.2"
	}
}
